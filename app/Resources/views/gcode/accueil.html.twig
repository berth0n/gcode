				<div
					class="col-lg-5 mb-lg-0 mb-4">

					<!-- Form with header -->
					<form class="card" method="POST" action="{{ path('sendmail') }}">
						<div
							class="card-body">
							<!-- Header -->
							<div class="form-header blue accent-1">
								<h3 class="mt-2">
									<i class="fas fa-envelope"></i>Nous envoyez des mails:</h3>
							</div>
							<p class="dark-grey-text">Nous vous répondons dans le plus bref délai (moins de 1 jour)</p>
